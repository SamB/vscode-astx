// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "extension",
      "command": "./node_modules/.bin/webpack",
      "args": ["--config", "extension.webpack.config.cjs", "--watch"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "webpack",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "(ERROR|WARNING) in (.+) (\\d+:\\d+(-\\d+)?)\\n([^\\n]+)",
          "severity": 1,
          "file": 2,
          "location": 3,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "assets by status",
          "endsPattern": "webpack (\\d+)\\.(\\d+)\\.(\\d+) compiled"
        }
      },
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build"
      }
    },
    {
      "type": "shell",
      "label": "webview",
      "command": "./node_modules/.bin/webpack",
      "args": ["serve", "--config", "webviews.webpack.config.cjs"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "webpack",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "assets by status",
          "endsPattern": "webpack (\\d+)\\.(\\d+)\\.(\\d+) compiled"
        }
      },
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "build",
      "dependsOn": ["extension", "webview"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
